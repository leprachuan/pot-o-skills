{
  "name": "cisco-security-cloud-control",
  "version": "1.0.0",
  "description": "Manage Cisco Security Cloud Control resources - organizations, users, subscriptions, roles",
  "author": "Fosterbot",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.8"
  },
  "api": {
    "baseUrl": "https://api.security.cisco.com/v1",
    "authentication": "OAuth 2.0 Bearer Token",
    "endpointStructure": "/organizations/{orgId}/...",
    "documentation": "https://developer.cisco.com/docs/security-cloud-control/introduction/"
  },
  "parameters": {
    "action": {
      "type": "string",
      "description": "API action to perform",
      "required": true,
      "enum": [
        "list_organizations",
        "create_organization",
        "get_organization",
        "update_organization",
        "delete_organization",
        "list_users",
        "add_user",
        "remove_user",
        "assign_role",
        "list_subscriptions",
        "get_subscription",
        "list_roles"
      ]
    },
    "org_id": {
      "type": "string",
      "description": "Organization ID (UUID format)",
      "required": false
    },
    "user_id": {
      "type": "string",
      "description": "User ID (UUID format)",
      "required": false
    },
    "role_id": {
      "type": "string",
      "description": "Role ID",
      "required": false
    },
    "payload": {
      "type": "object",
      "description": "Request body payload",
      "required": false
    }
  },
  "runtimes": {
    "claude": {
      "implementation": ["claude/cisco_scc.py", "claude/cisco_scc_firewall.py"],
      "requirements": ["requests", "python-dotenv", "pyjwt"]
    },
    "copilot": {
      "implementation": ["copilot/cisco_scc.py", "copilot/cisco_scc_firewall.py"],
      "requirements": ["requests", "python-dotenv", "pyjwt"]
    },
    "gemini": {
      "implementation": ["gemini/cisco_scc.js", "gemini/cisco_scc_firewall.js"],
      "requirements": ["axios", "dotenv", "jsonwebtoken"]
    }
  },
  "examples": [
    {
      "description": "List all organizations",
      "module": "cisco_scc",
      "action": "list_organizations"
    },
    {
      "description": "Create new organization",
      "module": "cisco_scc",
      "action": "create_organization",
      "payload": {
        "name": "Acme Corp",
        "type": "managed"
      }
    },
    {
      "description": "List all devices in inventory",
      "module": "cisco_scc_firewall",
      "region": "us",
      "action": "list_devices"
    },
    {
      "description": "Get cloud-delivered FMC",
      "module": "cisco_scc_firewall",
      "region": "us",
      "action": "get_cdfmc_manager"
    },
    {
      "description": "List access policies from cdFMC",
      "module": "cisco_scc_firewall",
      "region": "us",
      "action": "get_cdfmc_access_policies",
      "domain_uid": "e276abec-e0f2-11e3-8169-6d9ed49b625f"
    }
  ]
}

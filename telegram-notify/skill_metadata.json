{
  "name": "telegram-notify",
  "description": "Send Telegram notifications with markdown formatting, auto-retry, rate limiting, and logging",
  "version": "1.0.0",
  "author": "FosterbotHome",
  "category": "notifications",
  "is_public": true,
  "keywords": ["telegram", "notification", "alert", "messaging", "bot"],
  "intents": ["send_notification", "send_alert", "test_connection", "get_history"],
  "supported_actions": [
    "send_notification",
    "send_alert",
    "get_message_history",
    "test_connection",
    "configure"
  ],
  "parameters": {
    "properties": {
      "action": {
        "type": "string",
        "description": "Action to perform",
        "required": true
      },
      "text": {
        "type": "string",
        "description": "Notification text (markdown supported)",
        "required": false
      },
      "priority": {
        "type": "boolean",
        "description": "High priority alert",
        "required": false
      }
    }
  },
  "returns": {
    "success": {"type": "boolean"},
    "message": {"type": "string"},
    "result": {"type": "object"}
  },
  "runtimes": {
    "claude": {
      "implementation": "claude/implementation/telegram_notify.py",
      "type": "python_class"
    },
    "copilot": {
      "implementation": "copilot/implementation/telegram_notify_cli.py",
      "type": "python_cli"
    },
    "gemini": {
      "implementation": "gemini/implementation/telegram_notify_functions.py",
      "type": "function_definitions"
    }
  },
  "dependencies": {
    "python": ["python-telegram-bot"]
  }
}

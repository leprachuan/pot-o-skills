{
  "name": "task-scheduler",
  "description": "Schedule and manage agent tasks with natural language timing, full job management, execution logging, and diagnostics",
  "version": "1.0.0",
  "author": "FosterbotHome",
  "category": "task_automation",
  "is_public": true,
  "keywords": ["schedule", "task", "automation", "cron", "jobs", "background", "agent", "timing"],
  "intents": ["schedule_task", "manage_jobs", "view_logs", "troubleshoot_scheduling"],
  "supported_actions": [
    "schedule_task",
    "list_jobs",
    "pause_job",
    "resume_job",
    "delete_job",
    "get_logs",
    "doctor"
  ],
  "parameters": {
    "properties": {
      "action": {
        "type": "string",
        "description": "Action to perform",
        "required": true,
        "examples": ["schedule_task", "list_jobs", "doctor"]
      },
      "name": {
        "type": "string",
        "description": "Job name/ID",
        "required": false
      },
      "schedule": {
        "type": "string",
        "description": "When to run - natural language or cron (e.g., 'every day at 9am', '0 9 * * *')",
        "required": false
      },
      "agent": {
        "type": "string",
        "description": "Agent to run (fosterbot, foster_brain, etc.)",
        "required": false
      },
      "runtime": {
        "type": "string",
        "description": "AI runtime (claude, copilot, gemini)",
        "required": false
      },
      "task": {
        "type": "string",
        "description": "Task description/prompt for the agent",
        "required": false
      },
      "job_id": {
        "type": "string",
        "description": "Job ID to manage",
        "required": false
      }
    }
  },
  "returns": {
    "success": {
      "type": "boolean",
      "description": "Whether operation succeeded"
    },
    "result": {
      "type": "object",
      "description": "Job data or execution result"
    },
    "message": {
      "type": "string",
      "description": "Status message"
    }
  },
  "runtimes": {
    "claude": {
      "implementation": "claude/implementation/task_scheduler.py",
      "type": "python_class"
    },
    "copilot": {
      "implementation": "copilot/implementation/task_scheduler_cli.py",
      "type": "python_cli"
    },
    "gemini": {
      "implementation": "gemini/implementation/task_scheduler_functions.py",
      "type": "function_definitions"
    }
  },
  "dependencies": {
    "python": ["apscheduler"],
    "system": ["agent_manager.py"]
  }
}
